<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="Button">
        <item name="android:gravity">center</item>
        <item name="android:onClick">ClicButton</item>
    </style>

    <style name="Fon">
        <item name="android:background">#000000</item>
    </style>

    <style name="Text">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="EditText">
        <item name="android:textColor">@color/myTurquoise</item>
        <item name="android:textSize">22dp</item>
        <item name="android:background">@drawable/te</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="MyAppActionBarTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyApp.ActionBar</item>
    </style>

    <style name="MyApp.ActionBar" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">#000000</item>
    </style>

</resources>
